/* pages/mypage/mypage.wxss */
.user_avater{
  display: flex;
  flex-direction: row;
  justify-content: center;
  height: 100px;
  width: 100%;
  text-align: center;
  box-shadow: 0px 1px 2px  rgb(192, 192, 192);
}
.user_avater image{
  margin-top: 20px ;
  height:60px;
  width: 60px;
  border-radius: 25px;
}
.bind_phone{
  display: flex;
  flex-direction: row;
  text-align: left;
  width: 100%;
  height: 60px;
  box-shadow: 0px 1px 1px rgb(192, 192, 192);
}
.bind_phone text{
  font-size: 14px;
  text-align: left;
  line-height: 50px;
}
.bind_phone button{
  background-color:#d81e06;
  color:white;
  font-size: 12px;
  height: 30px;
  margin-top: 10px;
  text-align: center;
}
